        // Function to update song numbers
        function updateSongNumbers() {
          const songs = Array.from(playlist.children);
          songs.forEach((song, index) => {
            const rank = song.querySelector(".playlist-rank");
            rank.textContent = String(index + 1).padStart(2, "0"); // Add leading zero
          });
        }

