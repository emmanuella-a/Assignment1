          // Clear existing playlist and append shuffled songs
          playlist.innerHTML = "";
          shuffled.forEach((song) => playlist.appendChild(song));

          // Update song numbers
          updateSongNumbers();
        });

        // Add Song to Playlist
        addSongForm.addEventListener("submit", (e) => {
          e.preventDefault();

          const songTitle = songTitleInput.value.trim(); // Get song title
          if (songTitle) {
            // Create new song item
            const newSong = document.createElement("li");
            newSong.classList.add("playlist-item");

            // Create rank element
            const rank = document.createElement("div");
            rank.classList.add("playlist-rank");
            rank.textContent = String(playlist.children.length + 1).padStart(
              2,
              "0"
            ); // Add leading zero

            // Create song title element
            const songContainer = document.createElement("div");
            songContainer.classList.add("playlist-song");
            const songTitleElement = document.createElement("span");
            songTitleElement.classList.add("song-title");
            songTitleElement.textContent = songTitle;

            // Append title to container
            songContainer.appendChild(songTitleElement);

            // Append rank and song container to new song
            newSong.appendChild(rank);
            newSong.appendChild(songContainer);

            // Append new song to playlist
            playlist.appendChild(newSong);

            // Clear input field
            songTitleInput.value = "";
          }
        });
